                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                @try
                {
                    if (Session["EmployeePositionName"].ToString() == "Web Developer" || Session["EmployeePositionName"].ToString() == "Senior QA")
                    {
                        <li><a href="#/" onclick="addCourse()"><i class="fa fa-arrow-circle-o-right" style="font-size:20px;"></i> New Course</a></li>
                    }
                }
                catch (Exception ex) { }

                <li><a href="#/" onclick="viewCourse()"><i class="fa fa-arrow-circle-o-right" style="font-size:20px;"></i> View Courses</a></li>

                @try
                {
                    if (Session["EmployeePositionName"].ToString() == "Web Developer" || Session["EmployeePositionName"].ToString() == "Senior QA")
                    {
                        <li><a href="#/" onclick="viewCourseList()"><i class="fa fa-arrow-circle-o-right" style="font-size:20px;"></i> View Course List</a></li>
                    }
                }
                catch (Exception ex) { }
                <!--<li><a href="#/" onclick="Exams()"><i class="fa fa-arrow-circle-o-right" style="font-size:20px;"></i> Exams</a></li>-->
            </ul>
        </li>
        @try
        {
            if (Session["EmployeePositionName"].ToString() == "Web Developer" || Session["EmployeePositionName"].ToString() == "Senior QA")
            {
                <li><a href="#/" onclick="viewAgentsData()"><i class="fa fa-group"></i> <span>EMPLOYEES DATA</span></a></li>
            }
        }
        catch (Exception ex) { }

        @*<li class="treeview">
                <a href="#/">
                    <i class="fa fa-cloud"></i> <span>DISCUSSION</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="#/"><i class="fa fa-arrow-circle-o-right"></i> New Discussion</a></li>
                    <li><a href="#/"><i class="fa fa-arrow-circle-o-right"></i> View Discussion</a></li>
                </ul>
            </li>*@
    </ul>
</section>
<!-- /.sidebar -->
</aside>
<!-- =============================================== -->
