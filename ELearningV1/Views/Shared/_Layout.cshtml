@RenderSection("scripts", required: false)
</body>
</html>
<div id="spin" class="spinner hidden">
    <div class="bounce1"></div>
    <div class="bounce2"></div>
    <div class="bounce3"></div>
    <p>Loading...</p>
</div>

<div class="modal fade" id="modalAddCourse">
    <div class="modal-dialog" style="margin-top:300px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add Course</h4>
            </div>
            <div class="modal-body">
                <!-- form start -->

                <form role="form">
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group" align="center">
                                <img src="~/UpLoadedImages/imagesaaaaa.jpg" id="CoursePic" class="img-thumbnail" alt="Cinque Terre" style="width:150px; height:150px;">
                                <input type="file" id="CourseImage" />
                            </div>
                        </div>
                        <div class="col-md-6  col-xs-12">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Enter Course Name:</label>
                                <input type="email" class="form-control" id="CName" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Description:</label>
                                <input type="email" class="form-control" id="CDesc" placeholder="Description">
                            </div>
                            <div class="form-group">
                                <label>Select Minimum Day(s)</label>
                                <select class="form-control" id="MinDay">
                                    <option value="1" selected>1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>

                <!-- /.box -->
            </div>
            <div class="modal-footer">
                <button type="button" onclick="ocAddNewCourse()" class="btn btn-primary">Add</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<input id="imageName" class="hidden" />
<script src="~/Scripts/Dev_Scripts/AddNewCourse.js"></script>

<script>
    var Home = function ()
    {   window.location.href = '@Url.Action("Index", "Home")';  }

    var Exams = function ()
    {   window.location.href = '@Url.Action("ExamList", "Exam")';   }

    var viewCourse = function ()
    {   window.location.href = '@Url.Action("ViewCourse", "Home")'; }

    var addCourse = function ()
    {   $("#modalAddCourse").modal('show'); }

    var viewAgentsData = function ()
    { window.location.href = '@Url.Action("Index", "Agent")'; }

    var viewCourseList = function () {
        window.location.href = '@Url.Action("ViewCourseList", "Course")';
    }

    var ocSignOut = function ()
    {
       $.ajax({
            type: "POST",
            url: "/LogIn/LogOutAccount",
            data: {},
           success: function (response) {
                window.location.href = '@Url.Action("Index", "LogIn")';
            },
            error: function (response) {
                alert(response.res);
            }
        });
    }


</script>