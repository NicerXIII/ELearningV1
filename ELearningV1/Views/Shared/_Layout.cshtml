                                <li><a href="@Url.Action("IndexCourseAssign", "Course")"><i class="fa fa-arrow-circle-o-right" style="font-size:20px;"></i> Assign Course</a></li>
                                <li><a href="@Url.Action("EmployeeList", "Course")"><i class="fa fa-arrow-circle-o-right" style="font-size:20px;"></i> Employee List</a></li>
                            </ul>
                        </li>
                    }
                }
                catch (Exception ex) { }

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
    <!-- =============================================== -->
